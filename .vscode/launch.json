{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node",
            "env": {
                "NODE_ENV": "local",
                "TZ": "Europe/Amsterdam",
                "TS_NODE_PROJECT": "./tsconfig.json"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
            "args": [
                "--inspect=0.0.0.0",
                "--respawn",
                "./src",
                "src/index.ts"
            ],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/**/*.ts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test debug",
            "env": {
                "NODE_ENV": "test",
            },
            "skipFiles": [
                "<node_internals>/**",
                
            ],
            "args": [
                "--inspect=0.0.0.0",
                "node_modules/.bin/jest",
                "--watch",
                "--runInBand"
            ],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/**/*.ts"
            ]
        }
    ]
}